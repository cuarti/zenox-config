{
  "name": "@zenox/config",
  "version": "0.1.1",
  "description": "Config engine for Zenox Framework",
  "keywords": [
    "zenox",
    "config",
    "yaml"
  ],
  "license": "MIT",
  "main": "src/index.js",
  "typings": "src/index",
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "dev": "npx run dev:ts",
    "dev:ts": "tsc --watch",
    "test": "npm run test:lint && npm run test:jest",
    "test:lint": "tslint **/*.ts -e '**/*.d.ts' -t verbose",
    "test:jest": "jest",
    "prepublish": "npm run build"
  },
  "author": {
    "name": "Albert Cuartiella",
    "email": "cuarti1992@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cuarti/zenox-config.git"
  },
  "homepage": "https://github.com/cuarti/zenox-config#readme",
  "bugs": {
    "url": "https://github.com/cuarti/zenox-config/issues"
  },
  "dependencies": {
    "js-yaml": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/js-yaml": "^3.10.1",
    "@types/node": "^8.5.9",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
